</head>
<body>
    <%- include('../includes/navigation.ejs'); %> 
    <main class="main">
        <h1 class="primary-title">Orders</h1>
        <% if (!orders.length) { %> 
            <h2 class="secondary-title">No Orders!</h1>
        <% } else { %> 
            <div>
                <ul class="checkout">
                    <% orders.forEach((order, index) => { %> 
                        <li class="checkout__items">
                            <h2 class="mb-md">Order #<%= index + 1 %></h2>
                            <ul>
                                <% order.items.forEach(item => { %> 
                                    <li class="checkout__items--product mb-sm">
                                        <span class="checkout__items--product-title"><%= item.title %></span> 
                                        x<%= item.quantity %>
                                    </li>
                                <% }); %> 
                                <li class="checkout__total">Total: $<%= order.total %> </li>
                            </ul>
                        </li>
                    <% }); %> 
                </ul>
            </div>
        <% } %> 
    </main>
    <%- include('../includes/end.ejs'); %> 