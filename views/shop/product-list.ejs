</head>
<body>
    <%- include('../includes/navigation.ejs'); %> 
    <main class="main">
        <h1 class="primary-title">Shop</h1>
        <% if (products.length) { %> 
            <div class="product">
                <% for (product of products) { %> 
                    <article class="card product__item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="/<%= product.imageUrl %>" alt="<%= product.title %>" width="200px">
                        </div>
                        <div class="card__content">
                            <h2 class="card__price">$<%= product.price %></h2>
                            <p class="card__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/product-details/<%= product._id %> " class="btn">Details</a>
                            <% if (isAuthenticated) { %> 
                                <%- include('../includes/add-to-cart.ejs') %> 
                            <% } %> 
                        </div>
                    </article>
                <% } %> 
            </div>
            <%- include('../includes/pagination.ejs', pageInfo); %> 
        <% } else { %> 
            <h2 class="secondary-title">No Products Found!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs'); %> 