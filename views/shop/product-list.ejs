</head>
<body>
    <%- include('../includes/navigation.ejs'); %> 
    <main class="main">
        <h1 class="primary-title">My Products</h1>
        <% if (products.length) { %> 
            <div class="product">
                <% for (product of products) { %> 
                    <article class="card product__item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="https://picsum.photos/id/<%= '5' + product.id %>/200" alt="<%= product.title %>" width="200px">
                        </div>
                        <div class="card__content">
                            <h2 class="card__price">$<%= product.price %></h2>
                            <p class="card__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/product-details/<%= product.id %> " class="btn">Details</a>
                            <form action="/cart" method="POST">
                                <button class="btn" type="submit">Add to Cart</button>
                                <input type="hidden" name="productId" value="<%= product.id %>">
                            </form>
                        </div>
                    </article>
                <% } %> 
            </div>
        <% } else { %> 
            <h2 class="secondary-title">No Products Found!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs'); %> 