<%- include('../includes/head.ejs'); %> 

</head>
<body>
    <%- include('../includes/navigation.ejs'); %> 
    <main class="main">
        <h1 class="primary-title"><%= product.title %></h1>
        <article class="card product__item">
            <div class="card__image mt-md">
                <img src="https://picsum.photos/id/<%= '5' + product.id %>/200" alt="<%= product.title %>">
            </div>
            <div class="card__content">
                <h2 class="card__price">$<%= product.price %></h2>
                <p class="card__description"><%= product.description %></p>
            </div>
            <div class="card__actions">
                <form action="/cart" method="POST">
                    <button class="btn" type="submit">Add to Cart</button>
                    <input type="hidden" name="productId" value="<%= product.id %>">
                </form>
            </div>
        </article>
    </main>
    <%- include('../includes/end.ejs'); %> 