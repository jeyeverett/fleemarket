</head>
<body>
    <%- include('../includes/navigation.ejs'); %> 
    <main class="main">
        <h1 class="primary-title">Product Admin</h1>
        <% if (products.length) { %> 
            <div class="product">
                <% for (product of products) { %> 
                    <article class="card product__item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="https://picsum.photos/id/<%= '5' + Math.floor(Math.random() * 100) %>/200" alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="card__price">$<%= product.price %></h2>
                            <p class="card__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions card__admin">
                            <a href="/admin/edit-product/<%= product._id %>?edit=true">
                                <button class="btn">Edit</button>
                            </a>
                            <form action="/admin/delete-product" method="POST">
                                <input type="hidden" name="id" value="<%= product._id %>">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </div>
                    </article>
                <% } %> 
            </div>
        <% } else { %> 
            <h2 class="secondary-title">No Products Found!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs'); %> 
